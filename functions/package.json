{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "main": "lib/index.js",
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "build": "./node_modules/.bin/tslint -p tslint.json -q && ./node_modules/.bin/tsc",
    "build-fast": "./node_modules/.bin/tsc",
    "dev": "npx nodemon --expose-gc --optimize-for-size --max-old-space-size=512 ./lib/server.js",
    "lint": "",
    "test": "jest --verbose",
    "deploy-docker": "yarn build-fast && sh build-deploy-docker.sh",
    "deploy-api-prod": "API_COUNT=1 API_ENVIRONMENT=prod API_SERVER=api-prod-1 sh upgrade-api.sh",
    "deploy-api-stage": "API_COUNT=1 API_ENVIRONMENT=stage API_SERVER=api-stage-1 sh upgrade-api.sh",
    "deploy-api-alpha": "API_COUNT=1 API_ENVIRONMENT=alpha API_SERVER=api-alpha-1 sh upgrade-api.sh"
  },
  "engines": {
    "node": "12"
  },
  "dependencies": {
    "@jest-mock/express": "^1.4.2",
    "@sendgrid/mail": "^7.0.0",
    "@sentry/node": "^6.1.0",
    "await-lock": "^2.1.0",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "cls-hooked": "^4.2.2",
    "cors": "^2.8.5",
    "csv-parse": "^4.12.0",
    "deepmerge": "^4.2.2",
    "express": "^4.17.1",
    "firebase": "^8.2.6",
    "firebase-admin": "^9.4.2",
    "firebase-functions": "^3.13.1",
    "flatted": "^3.1.1",
    "googleapis": "^49.0.0",
    "ics": "^2.19.0",
    "json-stable-stringify": "^1.0.1",
    "json-stringify-safe": "^5.0.1",
    "json2csv": "^5.0.5",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.28",
    "node-fetch": "^2.6.1",
    "node-mailjet": "^3.3.1",
    "pokersolver": "^2.1.3",
    "ramda": "^0.27.1",
    "strip-bom": "^4.0.0",
    "stripe": "^8.128.0",
    "swagger-jsdoc": "^6.0.0-rc.4",
    "swagger-ui-express": "^4.1.5",
    "tiny-uid": "^1.1.1",
    "tslint": "^6.1.3",
    "twilio": "^3.55.0"
  },
  "devDependencies": {
    "@testing-library/react": "^11.0.2",
    "@types/bluebird": "^3.5.32",
    "@types/csv-parse": "^1.2.2",
    "@types/express": "^4.17.8",
    "@types/firebase": "^3.2.1",
    "@types/jest": "^26.0.23",
    "@types/json2csv": "^5.0.1",
    "@types/node-fetch": "^2.5.7",
    "@types/ramda": "^0.27.14",
    "@types/swagger-ui-express": "^4.1.2",
    "firebase-functions-test": "^0.1.6",
    "git-describe": "^4.0.4",
    "jest": "^27.0.6",
    "nodemon": "^2.0.6",
    "ts-jest": "^27.0.3",
    "typescript": "^4.0.2"
  },
  "private": true
}